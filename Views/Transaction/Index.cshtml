@model IEnumerable<BankTransaction.Models.Transaction>

@{
    ViewData["Title"] = "Index";
}

<h1>Passbook</h1>


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BeneficiaryName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th> <a asp-action="AddOrEdit" class="btn btn-sm btn-success">
                    <i class="fa-solid fa-plus"></i> New
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BeneficiaryName)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>

                <div class="btn-group btn btn-group-sm">
                <a asp-action="AddOrEdit" asp-route-id="@item.TransactionId" class="btn btn-warning">
                        <i class="fa-regular fa-pen-to-square"></i>
                 </a> 
                
                <a asp-action="Delete" asp-route-id="@item.TransactionId" class="btn btn-danger">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
